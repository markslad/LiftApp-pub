<Window x:Class="LiftApp.Views.ErrorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LiftApp.Views"
        mc:Ignorable="d"
        Title="Chyba" Height="400" Width="400"
        WindowStyle="SingleBorderWindow">
    <Grid Margin="5 5 5 0">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <ScrollViewer Grid.Row="0">
            <TextBlock Name="ErrorMessage"/>
        </ScrollViewer>
        <Button Content="Zavřít" Click="Button_Click" Grid.Row="1" HorizontalAlignment="Right" Padding="15 0 15 0" Margin="5 5 0 5"/>
    </Grid>
</Window>
